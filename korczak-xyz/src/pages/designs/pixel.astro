---
import DesignSwitcher from '../../components/DesignSwitcher.astro';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Pixel Art - korczak.xyz</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }

      body {
        font-family: 'Press Start 2P', cursive;
        min-height: 100vh;
        background: #1a1c2c;
        color: #f4f4f4;
        padding: 20px;
        padding-bottom: 100px;
        image-rendering: pixelated;
      }

      .container {
        max-width: 700px;
        margin: 0 auto;
      }

      .pixel-border {
        background: #2a2e4a;
        border: 4px solid #5a6988;
        box-shadow:
          8px 8px 0 #0d0f18,
          inset -4px -4px 0 #3d4466,
          inset 4px 4px 0 #6b7ba3;
        padding: 30px;
        margin-bottom: 20px;
      }

      .hero {
        text-align: center;
      }

      .pixel-avatar {
        width: 80px;
        height: 80px;
        margin: 0 auto 20px;
        background:
          linear-gradient(90deg, #ffcc5c 25%, transparent 25%),
          linear-gradient(90deg, transparent 75%, #ffcc5c 75%),
          linear-gradient(0deg, #ffcc5c 25%, transparent 25%),
          linear-gradient(0deg, transparent 75%, #ffcc5c 75%),
          #5fcde4;
        background-size: 8px 8px;
        border: 4px solid #0d0f18;
        box-shadow: 4px 4px 0 #0d0f18;
      }

      h1 {
        font-size: clamp(0.8rem, 3vw, 1.2rem);
        color: #5fcde4;
        text-shadow: 3px 3px 0 #0d0f18;
        margin-bottom: 10px;
        line-height: 1.8;
      }

      .subtitle {
        font-size: 0.6rem;
        color: #ffcc5c;
        line-height: 1.8;
      }

      .pixel-menu {
        display: flex;
        flex-direction: column;
        gap: 12px;
      }

      .pixel-link {
        display: flex;
        align-items: center;
        gap: 15px;
        background: #3d4466;
        border: 4px solid #5a6988;
        box-shadow:
          4px 4px 0 #0d0f18,
          inset -2px -2px 0 #2a2e4a,
          inset 2px 2px 0 #6b7ba3;
        padding: 15px 20px;
        text-decoration: none;
        color: #f4f4f4;
        font-size: 0.7rem;
        transition: all 0.1s;
        position: relative;
      }

      .pixel-link:hover {
        background: #4d5476;
        transform: translate(2px, 2px);
        box-shadow:
          2px 2px 0 #0d0f18,
          inset -2px -2px 0 #2a2e4a,
          inset 2px 2px 0 #6b7ba3;
      }

      .pixel-link:active {
        transform: translate(4px, 4px);
        box-shadow:
          0px 0px 0 #0d0f18,
          inset -2px -2px 0 #2a2e4a,
          inset 2px 2px 0 #6b7ba3;
      }

      .pixel-icon {
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.8rem;
        flex-shrink: 0;
      }

      .pixel-icon.songs { color: #52de97; }
      .pixel-icon.discord { color: #7289da; }
      .pixel-icon.youtube { color: #ff6b6b; }
      .pixel-icon.courses { color: #ff8e72; }
      .pixel-icon.mentoring { color: #5fcde4; }
      .pixel-icon.blog { color: #ffcc5c; }
      .pixel-icon.github { color: #c9c9c9; }
      .pixel-icon.linkedin { color: #5fcde4; }

      .pixel-arrow {
        margin-left: auto;
        color: #5a6988;
      }

      .stats-bar {
        display: flex;
        justify-content: space-around;
        margin-top: 20px;
        padding: 15px;
        background: #2a2e4a;
        border: 4px solid #5a6988;
        box-shadow:
          4px 4px 0 #0d0f18,
          inset -2px -2px 0 #1a1c2c,
          inset 2px 2px 0 #3d4466;
      }

      .stat {
        text-align: center;
      }

      .stat-value {
        font-size: 1rem;
        color: #52de97;
        text-shadow: 2px 2px 0 #0d0f18;
      }

      .stat-label {
        font-size: 0.5rem;
        color: #5a6988;
        margin-top: 5px;
      }

      .pixel-decoration {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 20px;
      }

      .pixel-heart {
        width: 20px;
        height: 20px;
        background: #ff6b6b;
        clip-path: polygon(50% 0%, 100% 35%, 100% 70%, 50% 100%, 0% 70%, 0% 35%);
        animation: beat 1s infinite;
      }

      @keyframes beat {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
      }

      .pixel-star {
        width: 20px;
        height: 20px;
        background: #ffcc5c;
        clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
        animation: twinkle 2s infinite;
      }

      @keyframes twinkle {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
      }

      @media (max-width: 500px) {
        .pixel-border { padding: 20px 15px; }
        h1 { font-size: 0.7rem; }
        .pixel-link { padding: 12px 15px; font-size: 0.6rem; }
        .stats-bar { flex-direction: column; gap: 15px; }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="pixel-border hero">
        <div class="pixel-avatar"></div>
        <h1>OSKAR KORCZAK</h1>
        <p class="subtitle">LVL 7 SOFTWARE ENGINEER</p>
      </div>

      <div class="pixel-border">
        <nav class="pixel-menu">
          <a href="/songs/" class="pixel-link">
            <span class="pixel-icon songs">*</span>
            <span>SONGS</span>
            <span class="pixel-arrow">></span>
          </a>

          <a href="https://discord.gg/DwbvwjJM7N" target="_blank" rel="noopener noreferrer" class="pixel-link">
            <span class="pixel-icon discord">@</span>
            <span>DISCORD</span>
            <span class="pixel-arrow">></span>
          </a>

          <a href="https://www.youtube.com/@korczakxyz" target="_blank" rel="noopener noreferrer" class="pixel-link">
            <span class="pixel-icon youtube">></span>
            <span>YOUTUBE</span>
            <span class="pixel-arrow">></span>
          </a>

          <a href="/courses/" class="pixel-link">
            <span class="pixel-icon courses">&lt;/&gt;</span>
            <span>COURSES</span>
            <span class="pixel-arrow">></span>
          </a>

          <a href="/mentoring/" class="pixel-link">
            <span class="pixel-icon mentoring">?</span>
            <span>MENTORING</span>
            <span class="pixel-arrow">></span>
          </a>

          <a href="/blog/" class="pixel-link">
            <span class="pixel-icon blog">#</span>
            <span>BLOG</span>
            <span class="pixel-arrow">></span>
          </a>

          <a href="https://github.com/oskarissimus" target="_blank" rel="noopener noreferrer" class="pixel-link">
            <span class="pixel-icon github">{`{}`}</span>
            <span>GITHUB</span>
            <span class="pixel-arrow">></span>
          </a>

          <a href="https://www.linkedin.com/in/oskar-korczak/" target="_blank" rel="noopener noreferrer" class="pixel-link">
            <span class="pixel-icon linkedin">in</span>
            <span>LINKEDIN</span>
            <span class="pixel-arrow">></span>
          </a>
        </nav>
      </div>

      <div class="stats-bar">
        <div class="stat">
          <div class="stat-value">7</div>
          <div class="stat-label">YEARS</div>
        </div>
        <div class="stat">
          <div class="stat-value">99</div>
          <div class="stat-label">CODE</div>
        </div>
        <div class="stat">
          <div class="stat-value">MAX</div>
          <div class="stat-label">SKILL</div>
        </div>
      </div>

      <div class="pixel-decoration">
        <div class="pixel-heart"></div>
        <div class="pixel-star"></div>
        <div class="pixel-heart"></div>
        <div class="pixel-star"></div>
        <div class="pixel-heart"></div>
      </div>
    </div>

    <DesignSwitcher current="Pixel" />
  </body>
</html>
