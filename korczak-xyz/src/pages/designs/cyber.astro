---
import DesignSwitcher from '../../components/DesignSwitcher.astro';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Cyberpunk - korczak.xyz</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Rajdhani:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }

      body {
        font-family: 'Rajdhani', sans-serif;
        min-height: 100vh;
        background: #0a0a0f;
        color: #fff;
        padding: 20px;
        padding-bottom: 100px;
        overflow-x: hidden;
      }

      .grid-bg {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background:
          linear-gradient(rgba(0, 255, 255, 0.03) 1px, transparent 1px),
          linear-gradient(90deg, rgba(0, 255, 255, 0.03) 1px, transparent 1px);
        background-size: 50px 50px;
        pointer-events: none;
        z-index: 0;
      }

      .container {
        max-width: 900px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
      }

      .hero {
        text-align: center;
        padding: 60px 20px;
        position: relative;
      }

      .hero::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, rgba(255, 0, 128, 0.3) 0%, transparent 70%);
        filter: blur(60px);
        z-index: -1;
      }

      .glitch-wrapper {
        position: relative;
        display: inline-block;
      }

      h1 {
        font-family: 'Orbitron', sans-serif;
        font-size: clamp(2.5rem, 8vw, 5rem);
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        background: linear-gradient(135deg, #00ffff, #ff00ff, #00ffff);
        background-size: 200% 200%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: gradient 3s ease infinite;
        position: relative;
      }

      @keyframes gradient {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
      }

      .subtitle {
        font-size: 1.2rem;
        color: #00ffff;
        text-transform: uppercase;
        letter-spacing: 0.3em;
        margin-top: 10px;
        text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
      }

      .cyber-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 40px;
      }

      .cyber-card {
        background: linear-gradient(135deg, rgba(0, 255, 255, 0.1) 0%, rgba(255, 0, 128, 0.1) 100%);
        border: 1px solid rgba(0, 255, 255, 0.3);
        padding: 25px;
        text-decoration: none;
        color: #fff;
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
        clip-path: polygon(0 0, calc(100% - 15px) 0, 100% 15px, 100% 100%, 15px 100%, 0 calc(100% - 15px));
      }

      .cyber-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(0, 255, 255, 0.2), transparent);
        transition: left 0.5s;
      }

      .cyber-card:hover::before {
        left: 100%;
      }

      .cyber-card:hover {
        border-color: #00ffff;
        box-shadow: 0 0 30px rgba(0, 255, 255, 0.3), inset 0 0 30px rgba(0, 255, 255, 0.1);
        transform: translateY(-5px);
      }

      .cyber-card .corner {
        position: absolute;
        width: 20px;
        height: 20px;
        border: 2px solid #ff00ff;
      }

      .cyber-card .corner.tl { top: 5px; left: 5px; border-right: none; border-bottom: none; }
      .cyber-card .corner.br { bottom: 5px; right: 5px; border-left: none; border-top: none; }

      .cyber-card .icon {
        font-family: 'Orbitron', sans-serif;
        font-size: 1.5rem;
        color: #00ffff;
        margin-bottom: 15px;
        text-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
      }

      .cyber-card .title {
        font-family: 'Orbitron', sans-serif;
        font-size: 1.1rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 8px;
      }

      .cyber-card .desc {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.6);
      }

      .stats-bar {
        display: flex;
        justify-content: center;
        gap: 40px;
        margin-top: 50px;
        padding: 20px;
        border-top: 1px solid rgba(0, 255, 255, 0.2);
        border-bottom: 1px solid rgba(0, 255, 255, 0.2);
      }

      .stat {
        text-align: center;
      }

      .stat-value {
        font-family: 'Orbitron', sans-serif;
        font-size: 2rem;
        font-weight: 900;
        color: #ff00ff;
        text-shadow: 0 0 20px rgba(255, 0, 128, 0.5);
      }

      .stat-label {
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.2em;
        color: rgba(255, 255, 255, 0.5);
      }

      .scanline {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: repeating-linear-gradient(
          0deg,
          transparent,
          transparent 2px,
          rgba(0, 0, 0, 0.1) 2px,
          rgba(0, 0, 0, 0.1) 4px
        );
        pointer-events: none;
        z-index: 1000;
      }

      @media (max-width: 600px) {
        .stats-bar { flex-direction: column; gap: 20px; }
      }
    </style>
  </head>
  <body>
    <div class="grid-bg"></div>
    <div class="scanline"></div>

    <div class="container">
      <div class="hero">
        <div class="glitch-wrapper">
          <h1>Oskar Korczak</h1>
        </div>
        <p class="subtitle">// System Engineer</p>
      </div>

      <div class="cyber-grid">
        <a href="/songs/" class="cyber-card">
          <span class="corner tl"></span>
          <span class="corner br"></span>
          <div class="icon">[♪]</div>
          <div class="title">Songs</div>
          <div class="desc">Audio modules loaded</div>
        </a>

        <a href="https://discord.gg/DwbvwjJM7N" target="_blank" rel="noopener noreferrer" class="cyber-card">
          <span class="corner tl"></span>
          <span class="corner br"></span>
          <div class="icon">[@]</div>
          <div class="title">Discord</div>
          <div class="desc">Network hub active</div>
        </a>

        <a href="https://www.youtube.com/@korczakxyz" target="_blank" rel="noopener noreferrer" class="cyber-card">
          <span class="corner tl"></span>
          <span class="corner br"></span>
          <div class="icon">[▶]</div>
          <div class="title">YouTube</div>
          <div class="desc">Stream connected</div>
        </a>

        <a href="/courses/" class="cyber-card">
          <span class="corner tl"></span>
          <span class="corner br"></span>
          <div class="icon">[&lt;/&gt;]</div>
          <div class="title">Courses</div>
          <div class="desc">Training protocols</div>
        </a>

        <a href="/mentoring/" class="cyber-card">
          <span class="corner tl"></span>
          <span class="corner br"></span>
          <div class="icon">[◈]</div>
          <div class="title">Mentoring</div>
          <div class="desc">Direct uplink</div>
        </a>

        <a href="/blog/" class="cyber-card">
          <span class="corner tl"></span>
          <span class="corner br"></span>
          <div class="icon">[#]</div>
          <div class="title">Blog</div>
          <div class="desc">Data logs</div>
        </a>

        <a href="https://github.com/oskarissimus" target="_blank" rel="noopener noreferrer" class="cyber-card">
          <span class="corner tl"></span>
          <span class="corner br"></span>
          <div class="icon">[{}]</div>
          <div class="title">GitHub</div>
          <div class="desc">Source repository</div>
        </a>

        <a href="https://www.linkedin.com/in/oskar-korczak/" target="_blank" rel="noopener noreferrer" class="cyber-card">
          <span class="corner tl"></span>
          <span class="corner br"></span>
          <div class="icon">[in]</div>
          <div class="title">LinkedIn</div>
          <div class="desc">Professional matrix</div>
        </a>
      </div>

      <div class="stats-bar">
        <div class="stat">
          <div class="stat-value">7+</div>
          <div class="stat-label">Years Online</div>
        </div>
        <div class="stat">
          <div class="stat-value">∞</div>
          <div class="stat-label">Lines of Code</div>
        </div>
        <div class="stat">
          <div class="stat-value">24/7</div>
          <div class="stat-label">Uptime</div>
        </div>
      </div>
    </div>

    <DesignSwitcher current="Cyber" />
  </body>
</html>
