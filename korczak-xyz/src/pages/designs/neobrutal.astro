---
import DesignSwitcher from '../../components/DesignSwitcher.astro';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Neobrutalist - korczak.xyz</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }

      body {
        font-family: 'Space Grotesk', sans-serif;
        min-height: 100vh;
        background: #e8ff47;
        padding: 20px;
        padding-bottom: 100px;
      }

      .container {
        max-width: 900px;
        margin: 0 auto;
      }

      .hero {
        background: #fff;
        border: 4px solid #000;
        border-radius: 20px;
        padding: 40px;
        margin-bottom: 20px;
        box-shadow: 8px 8px 0 #000;
        position: relative;
        overflow: hidden;
      }

      .hero::before {
        content: '';
        position: absolute;
        top: -20px;
        right: -20px;
        width: 100px;
        height: 100px;
        background: #ff6b6b;
        border-radius: 50%;
        border: 4px solid #000;
      }

      .hero::after {
        content: '';
        position: absolute;
        bottom: -30px;
        left: 30%;
        width: 60px;
        height: 60px;
        background: #4ecdc4;
        border: 4px solid #000;
        transform: rotate(45deg);
      }

      .hero h1 {
        font-size: clamp(2.5rem, 8vw, 4rem);
        font-weight: 700;
        line-height: 1;
        margin-bottom: 12px;
        position: relative;
        z-index: 1;
      }

      .hero p {
        font-size: 1.2rem;
        color: #666;
        position: relative;
        z-index: 1;
      }

      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 16px;
      }

      .neo-card {
        background: #fff;
        border: 4px solid #000;
        border-radius: 16px;
        padding: 24px;
        text-decoration: none;
        color: #000;
        display: flex;
        flex-direction: column;
        gap: 12px;
        box-shadow: 6px 6px 0 #000;
        transition: all 0.15s ease;
        position: relative;
        overflow: hidden;
      }

      .neo-card:hover {
        transform: translate(-4px, -4px);
        box-shadow: 10px 10px 0 #000;
      }

      .neo-card:active {
        transform: translate(2px, 2px);
        box-shadow: 4px 4px 0 #000;
      }

      .neo-card.songs { background: #1db954; color: #fff; }
      .neo-card.discord { background: #7289d9; color: #fff; }
      .neo-card.youtube { background: #ff0000; color: #fff; }
      .neo-card.courses { background: #ff6b6b; }
      .neo-card.mentoring { background: #4ecdc4; }
      .neo-card.blog { background: #ffd93d; }
      .neo-card.github { background: #333; color: #fff; }
      .neo-card.linkedin { background: #0077b5; color: #fff; }

      .neo-card .icon {
        width: 40px;
        height: 40px;
        background: rgba(0,0,0,0.1);
        border: 3px solid currentColor;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
      }

      .neo-card .title {
        font-size: 1.3rem;
        font-weight: 700;
      }

      .sticker {
        position: absolute;
        font-size: 0.7rem;
        font-weight: 700;
        padding: 4px 8px;
        background: #000;
        color: #e8ff47;
        border-radius: 4px;
        transform: rotate(-8deg);
        top: 10px;
        right: 10px;
      }

      .marquee {
        background: #000;
        color: #e8ff47;
        padding: 12px 0;
        margin-top: 30px;
        border-radius: 12px;
        overflow: hidden;
      }

      .marquee-content {
        display: flex;
        animation: scroll 20s linear infinite;
        white-space: nowrap;
      }

      .marquee-content span {
        padding: 0 40px;
        font-weight: 700;
        font-size: 1.1rem;
      }

      @keyframes scroll {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); }
      }

      @media (max-width: 600px) {
        .hero { padding: 30px 20px; }
        .grid { grid-template-columns: 1fr; }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="hero">
        <h1>Oskar Korczak</h1>
        <p>Software Engineer / Mentor / Builder</p>
      </div>

      <div class="grid">
        <a href="/songs/" class="neo-card songs">
          <div class="icon">*</div>
          <span class="title">Songs</span>
        </a>

        <a href="https://discord.gg/DwbvwjJM7N" target="_blank" rel="noopener noreferrer" class="neo-card discord">
          <span class="sticker">JOIN!</span>
          <div class="icon">@</div>
          <span class="title">Discord</span>
        </a>

        <a href="https://www.youtube.com/@korczakxyz" target="_blank" rel="noopener noreferrer" class="neo-card youtube">
          <div class="icon">></div>
          <span class="title">YouTube</span>
        </a>

        <a href="/courses/" class="neo-card courses">
          <span class="sticker">LEARN</span>
          <div class="icon">&lt;/&gt;</div>
          <span class="title">Courses</span>
        </a>

        <a href="/mentoring/" class="neo-card mentoring">
          <span class="sticker">1:1</span>
          <div class="icon">?</div>
          <span class="title">Mentoring</span>
        </a>

        <a href="/blog/" class="neo-card blog">
          <div class="icon">#</div>
          <span class="title">Blog</span>
        </a>

        <a href="https://github.com/oskarissimus" target="_blank" rel="noopener noreferrer" class="neo-card github">
          <div class="icon">{`{}`}</div>
          <span class="title">GitHub</span>
        </a>

        <a href="https://www.linkedin.com/in/oskar-korczak/" target="_blank" rel="noopener noreferrer" class="neo-card linkedin">
          <div class="icon">in</div>
          <span class="title">LinkedIn</span>
        </a>
      </div>

      <div class="marquee">
        <div class="marquee-content">
          <span>7 YEARS OF CODE</span>
          <span>PYTHON</span>
          <span>JAVASCRIPT</span>
          <span>DOCKER</span>
          <span>KUBERNETES</span>
          <span>MENTORING</span>
          <span>7 YEARS OF CODE</span>
          <span>PYTHON</span>
          <span>JAVASCRIPT</span>
          <span>DOCKER</span>
          <span>KUBERNETES</span>
          <span>MENTORING</span>
        </div>
      </div>
    </div>

    <DesignSwitcher current="Neobrutal" />
  </body>
</html>
