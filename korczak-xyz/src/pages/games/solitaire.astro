---
import Layout from '../../layouts/Layout.astro';
import Solitaire from '../../components/Solitaire/Solitaire';
import { useTranslations } from '../../i18n';
import '../../styles/solitaire.css';

const lang = 'en';
const t = useTranslations(lang);
---

<Layout title={`${t('Solitaire')} | korczak.xyz`} lang={lang}>
  <div class="window solitaire-window">
    <div class="title-bar">
      <span>{t('Solitaire')}</span>
      <div class="title-buttons">
        <div class="title-btn minimize-btn"></div>
        <div class="title-btn maximize-btn"></div>
        <div class="title-btn close-btn"></div>
      </div>
    </div>
    <div class="window-content solitaire-content">
      <Solitaire client:only="react" lang={lang} />
    </div>
  </div>
</Layout>

<style>
  .solitaire-window {
    margin-bottom: 20px;
  }

  .solitaire-content {
    padding: 0;
    background: var(--retro-teal);
  }
</style>
