---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="window page-window">
  <div class="title-bar">
    <span>{title}</span>
    <div class="title-buttons">
      <div class="title-btn minimize-btn">_</div>
      <div class="title-btn maximize-btn">[]</div>
      <div class="title-btn close-btn">X</div>
    </div>
  </div>
  <div class="window-content">
    <h1 class="page-title rainbow-text">* {title} *</h1>
    <main class="page-main">
      <slot />
    </main>
  </div>
</div>

<style>
  .page-window {
    margin-bottom: 20px;
  }

  .page-title {
    text-align: center;
    margin-bottom: 25px;
    padding-bottom: 15px;
    border-bottom: 2px dashed var(--retro-cyan);
  }

  .page-main {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
</style>
