---
interface Props {
  slug: string;
  title: string;
  author: string;
}

const { slug, title, author } = Astro.props;
---

<li class="flex flex-col items-start gap-1">
  <h2 class="text-2xl font-bold">
    <a href={`/pl/songs/${slug}/`} class="hover:underline">{title}</a>
  </h2>
  <span class="text-gray-500 dark:text-gray-400">{author}</span>
  <hr class="w-full border-1 border-gray-300 dark:border-gray-700 mt-2" />
</li>
