---
interface Props {
  icon: string;
  text: string;
  backgroundColor: string;
  to: string;
}

const { icon, text, to } = Astro.props;

// ASCII icons for retro look
const asciiIcons: Record<string, string> = {
  discord: '@',
  youtube: '>',
  'laptop-code': '</>',
  lightbulb: '?',
  'list-alt': '#',
  github: '{}',
  music: '*',
  linkedin: 'in',
};

const isExternal = to.startsWith('http');
const asciiIcon = asciiIcons[icon] || '*';

// Determine if this is a "hot" item for blinking effect
const isHot = icon === 'lightbulb' || icon === 'discord';
---

<a
  class="retro-big-btn"
  href={to}
  target={isExternal ? '_blank' : undefined}
  rel={isExternal ? 'noopener noreferrer' : undefined}
>
  <span class="btn-icon">{asciiIcon}</span>
  <span class="btn-text">{text}</span>
  {isHot && <span class="blink hot-badge">HOT!</span>}
</a>

<style>
  .retro-big-btn {
    background: var(--retro-gray);
    border: 3px outset var(--retro-white);
    padding: 15px 20px;
    text-decoration: none;
    color: var(--retro-black);
    font-size: 1.4rem;
    display: flex;
    align-items: center;
    gap: 15px;
    transition: none;
    width: 100%;
  }

  .retro-big-btn:hover {
    background: #a0a0a0;
    color: var(--retro-black);
  }

  .retro-big-btn:active {
    border-style: inset;
  }

  .btn-icon {
    background: var(--retro-teal);
    color: var(--retro-yellow);
    padding: 8px 12px;
    border: 2px inset var(--retro-dark-gray);
    font-weight: bold;
    min-width: 50px;
    text-align: center;
    font-family: 'Press Start 2P', cursive;
    font-size: 0.8rem;
  }

  .btn-text {
    flex-grow: 1;
    color: var(--retro-black);
  }

  .hot-badge {
    background: var(--retro-red);
    color: var(--retro-white);
    padding: 4px 8px;
    font-size: 0.9rem;
    font-weight: bold;
  }

  @media (max-width: 600px) {
    .retro-big-btn {
      font-size: 1.2rem;
      padding: 12px 15px;
    }

    .btn-icon {
      padding: 6px 10px;
      min-width: 40px;
      font-size: 0.7rem;
    }
  }
</style>
