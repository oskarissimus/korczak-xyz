---
interface Props {
  current?: string;
}

const { current = '' } = Astro.props;

const designs = [
  { name: 'Original', path: '/' },
  { name: 'Terminal', path: '/designs/terminal/' },
  { name: 'Neobrutal', path: '/designs/neobrutal/' },
  { name: 'Retro', path: '/designs/retro/' },
  { name: 'Cyber', path: '/designs/cyber/' },
  { name: 'Pixel', path: '/designs/pixel/' },
];
---

<nav class="fixed bottom-0 left-0 right-0 bg-gray-900/95 backdrop-blur-sm border-t border-gray-700 z-50">
  <div class="max-w-screen-lg mx-auto px-2 py-2">
    <div class="flex items-center justify-center gap-1 md:gap-2 flex-wrap">
      <span class="text-gray-400 text-xs md:text-sm mr-2 hidden sm:inline">Designs:</span>
      {designs.map(design => (
        <a
          href={design.path}
          class:list={[
            'px-2 py-1 md:px-3 md:py-1.5 rounded text-xs md:text-sm font-medium transition-colors',
            current === design.name
              ? 'bg-white text-gray-900'
              : 'text-gray-300 hover:bg-gray-700 hover:text-white'
          ]}
        >
          {design.name}
        </a>
      ))}
    </div>
  </div>
</nav>

<style>
  /* Add padding to body so content isn't hidden behind fixed nav */
  :global(body) {
    padding-bottom: 60px;
  }
</style>
