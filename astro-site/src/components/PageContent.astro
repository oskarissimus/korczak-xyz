---
import Header from './Header.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="flex flex-col items-center">
  <div class="flex flex-col max-w-screen-md w-full gap-16">
    <Header title={title} />
    <main class="flex flex-col gap-8">
      <slot />
    </main>
  </div>
</div>
